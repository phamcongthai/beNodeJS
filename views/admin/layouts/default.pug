doctype html
html
  head
    title #{title}
    link(rel="icon", href="/images/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/admin/css/style.css")
  body
    if currentRole.permissions.length > 0
      include ../partials/header
      .body
          include ../partials/sider
          .main
              block main
      script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
      script(src="/admin/js/script.js")
      script(type="application/javascript" src="/tinymce/tinymce.min.js")
      script(type="application/javascript" src="/admin/js/my-tinymce-config.js")
      script(src="/admin/js/roles.js")
    else
      h1 Bạn không có quyền