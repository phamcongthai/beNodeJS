extends ../../layouts/default.pug
include ../../mixin/flash.pug

block main
    h1.mb-4 Thêm mới quảng cáo
    +alert-error(5000)

    form#form-create-ads(action="/admin/ads/create" method="POST" enctype="multipart/form-data")
        div.form-group
            label(for="title") Tiêu đề quảng cáo
            input#title.form-control(type="text" name="title" required)

        div.form-group
            label(for="description") Mô tả
            textarea#description.form-control(name="description" rows="4")

        div.form-group
            label(for="targetUrl") Đường dẫn đích (URL)
            input#targetUrl.form-control(type="text" name="targetUrl" placeholder="https://example.com")

        div.form-group
            label(for="position") Vị trí hiển thị
            select#position.form-control(name="position" required)
                option(value="") -- Chọn vị trí --
                option(value="homepage_main_carousel") Carousel Chính (trang chủ)
                option(value="homepage_right_banner") Banner Phụ (trang chủ)

        div.form-group
            label(for="startDate") Ngày bắt đầu
            input#startDate.form-control(type="date" name="startDate")

        div.form-group
            label(for="endDate") Ngày kết thúc
            input#endDate.form-control(type="date" name="endDate")

        div.form-group
            label(for="image") Ảnh quảng cáo
            input#image.form-control(type="file" name="image" accept="image/*" input-upload-img)
            img(src="" alt="image" img-upload style="width: 100px; height: 100px; border-radius: 5px;")

        div.form-group
            label Trạng thái
            div.form-check
                input#active.form-check-input(type="radio" name="status" value="active" checked)
                label.form-check-label(for="active") Hoạt động
            div.form-check
                input#inactive.form-check-input(type="radio" name="status" value="inactive")
                label.form-check-label(for="inactive") Dừng hoạt động

        button.btn.btn-primary(type="submit") Tạo mới

    script(src="/admin/js/script.js")
