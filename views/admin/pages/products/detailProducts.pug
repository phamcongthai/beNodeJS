extends ../../layouts/default.pug

block main
    if (product.title)
        h1.mb-4= product.title

    if (brand && brand.name)
        div.mb-4
            span Thương hiệu: 
            b= brand.name

    if (product.price)
        div.mb-4 
            | Giá: 
            b= product.price.toLocaleString() + " VNĐ"

    if (product.discountPercentage)
        div.mb-4 
            | Giảm giá: 
            b= product.discountPercentage + "%"

    if (product.stock)
        div.mb-4 
            | Còn lại: 
            b= product.stock

    if (product.thumbnail)
        div.mb-4
            img(src=product.thumbnail style="width: 100px; border-radius: 5px;")

    if (product.status)
        div.mb-4
            span Trạng thái: 
            if (product.status === "active")
                span.badge.badge-success Hoạt động
            else
                span.badge.badge-danger Dừng hoạt động

    if (product.position)
        div.mb-4 
            | Vị trí: 
            b= product.position

    if (product.tags && product.tags.length > 0)
        div.mb-4
            | Tags: 
            each tag in product.tags
                span.badge.badge-info.mr-1= tag

    if (product.description)
        div.mb-4 !{product.description}

    button.btn.btn-warning.btn-sm.ml-1(id=`${product.id}` class="button-edit") Chỉnh sửa

    script(src="/admin/js/script.js")
