extends ../../layouts/default.pug

block main
  h1.mb-4 Sửa nhóm quyền

  form(action=`${prefixAdmin}/roles/edit/${roles._id}?_method=PATCH`, method="POST")
    div.form-group
      label(for="title") Tiêu đề
      input#title.form-control(type="text", name="title", value=roles.title required)

    div.form-group
      label(for="description") Mô tả
      input#description.form-control(type="text", name="description", value=roles.description)

    button.btn.btn-primary(type="submit") Cập nhật
