extends ../../layouts/default.pug

block main
  .container.mt-5
    .row.justify-content-center
      .col-md-8
        .card.shadow
          .card-header.bg-primary.text-white
            h5.mb-0 Cập nhật thông tin cá nhân
          .card-body
            form(action=`${prefixAdmin}/my-account/edit?_method=PATCH`, method="POST", enctype="multipart/form-data")
              .mb-3
                label(for="fullName") Họ tên *
                input.form-control(type="text", id="fullName", name="fullName", required, value=currentUser.fullName)

              .mb-3
                label(for="email") Email *
                input.form-control(type="email", id="email", name="email", required, value=currentUser.email)

              .mb-3
                label(for="password") Mật khẩu
                input.form-control(type="password", id="password", name="password")

              .mb-3
                label(for="phone") Số điện thoại
                input.form-control(type="text", id="phone", name="phone", value=currentUser.phone)

              .mb-3
                .form-group
                  label(for="avatar") Avatar
                  input#avatar.form-control(type="file", name="avatar", accept="image/*", input-upload-img)
                  img(src=currentUser.avatar, alt="avatar", style="width: 100px; height: 100px; border-radius: 5px;", img-upload)
      

              button.btn.btn-primary(type="submit") Cập nhật
