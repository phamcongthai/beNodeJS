extends ../../layouts/auth.pug
include ../../mixin/flash.pug

block main
  +alert-error(5000)
  +alert-success(5000)
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow-lg
          .card-body.p-4
            h2.text-center.mb-4 Đăng nhập

            form(action=`${prefixAdmin}/auth/login`, method="POST")
              //- Email
              .form-group.mb-3
                label(for="email") 
                  i.fas.fa-envelope.me-2
                  | Email
                input#email.form-control(
                  type="email", 
                  name="email", 
                  placeholder="Nhập email...",
                  required
                )

              //- Password
              .form-group.mb-4
                label(for="password") 
                  i.fas.fa-lock.me-2
                  | Mật khẩu
                input#password.form-control(
                  type="password", 
                  name="password", 
                  placeholder="Nhập mật khẩu...", 
                  required
                )

              //- Submit button
              button.btn.btn-primary.w-100(type="submit")
                i.fas.fa-sign-in-alt.me-2
                | Đăng nhập

            //- Optional: Link forgot password
            .text-center.mt-3
              a(href="#") Quên mật khẩu?

