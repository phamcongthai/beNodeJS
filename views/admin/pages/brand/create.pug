extends ../../layouts/default.pug
include ../../mixin/flash.pug

block main
    h1.mb-4 Thêm mới thương hiệu
    +alert-error(5000)

    form#form-create-brand(action="/admin/brands/create" method="POST" enctype="multipart/form-data")
        div.form-group
            label(for="name") Tên thương hiệu
            input#name.form-control(type="text" name="name" required)

        div.form-group
            label(for="description") Mô tả
            textarea#description.form-control(name="description" rows="4")

        div.form-group
            label(for="logo") Logo
            input#logo.form-control(type="file" name="logo" accept="image/*" input-upload-img)
            img(src="" alt="logo" img-upload style="width: 100px; height: 100px; border-radius: 5px;")

        div.form-group
            label Trạng thái
            div.form-check
                input#active.form-check-input(type="radio" name="status" value="active" checked)
                label.form-check-label(for="active") Hoạt động
            div.form-check
                input#inactive.form-check-input(type="radio" name="status" value="inactive")
                label.form-check-label(for="inactive") Dừng hoạt động
            div.form-check
                input#deleted.form-check-input(type="radio" name="status" value="deleted")
                label.form-check-label(for="deleted") Đã xóa

        button.btn.btn-primary(type="submit") Tạo mới

    script(src="/admin/js/script.js")
