    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css")

    // Google Analytics
    script(async src='https://www.googletagmanager.com/gtag/js?id=G-SFCS2RLDEJ')
