extends ../../layouts/default
include ../../mixin/products-grid

block main
  .order-success.container
    h2.text-success.mt-4 ✅ Đặt hàng thành công
    .alert.alert-success
      | Chúc mừng bạn đã đặt hàng thành công! Chúng tôi sẽ xử lý đơn hàng trong thời gian sớm nhất.

    // Thông tin cá nhân
    .order-info.mt-4
      h5 📋 Thông tin cá nhân
      table.table.table-bordered.mt-2
        tr
          th Họ tên
          td= userInfo.fullName
        tr
          th Số điện thoại
          td= userInfo.phone
        tr
          th Địa chỉ
          td= userInfo.address

    // Danh sách sản phẩm
    .product-list.mt-5
      h5 🛒 Chi tiết đơn hàng
      table.table.table-striped.table-hover.product-table
        thead.table-light
          tr
            th Ảnh
            th Sản phẩm
            th Đơn giá
            th Giảm giá
            th Giá sau giảm
            th Số lượng
            th Thành tiền
        tbody
          each product in products
            tr
              td
                img(src=product.thumbnail, alt=product.title, width="60", height="60", style="object-fit: cover; border-radius: 6px;")
              td= product.title
              td= product.price.toLocaleString() + ' đ'
              td= (product.discountPercentage || 0) + '%'
              td= product.newPrice.toLocaleString() + ' đ'
              td= product.quantity
              td= product.totalPrice.toLocaleString() + ' đ'
          tr.total-row
            td(colspan="6", class="text-end fw-bold") Tổng tiền:
            td.text-danger.fw-bold #{totalOrderPrice.toLocaleString()} đ

  // 👇 Thêm style ngay dưới block main
  style.
    .order-success {
      max-width: 800px;
      margin: 40px auto;
      background: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    .order-success h2 {
      color: #28a745;
      margin-bottom: 20px;
    }
    .order-info, .product-table {
      margin-top: 30px;
    }
    .product-table th, .product-table td {
      vertical-align: middle;
    }
    .total-row {
      font-weight: bold;
      color: #d9534f;
    }
