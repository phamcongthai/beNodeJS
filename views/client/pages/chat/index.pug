extends ../../layouts/default.pug

block main
  .container.my-3
    .row
      .col-12
        h1 Nh·∫Øn tin
        .chat(user_id=user._id)
          .inner-head
          //.inner-avatar EY
          //.inner-name Em Y√™u
          .inner-body 
            each item in msg
              if (item.user_id != user._id)
                .inner-incoming
                  .inner-name #{item.userName}
                  .inner-content #{item.content}
              else
                .inner-outgoing
                  .inner-content #{item.content}
          .inner-foot
            form(class="inner-form", action="")
              input(type="text", placeholder="Nh·∫≠p n·ªôi dung...", name="content")
              button(class="button-emoji" type="button") üòä
              button
                i.fa-solid.fa-paper-plane
          div(class="tooltip" role="tooltip")
            emoji-picker
    style.
      emoji-picker {
        width: 400px;
        height: 300px;
        --border-radius : 8px;
      }
      .tooltip {
        position: absolute;
        bottom: 60px; /* kho·∫£ng c√°ch t·ª´ input l√™n */
        right: 70px;  /* ƒëi·ªÅu ch·ªânh ngang sang tr√°i n·∫øu c·∫ßn */
        z-index: 999;
        visibility: hidden;
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .tooltip.shown {
        visibility: visible;
        opacity: 1;
      }

      .chat {
        position: relative; /* ƒë·ªÉ absolute trong .tooltip ƒë·ªãnh v·ªã theo .chat */
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 15px;
        background: #fff;
        display: flex;
        flex-direction: column;
        height: 500px;
      }

      .inner-body {
        flex: 1;
        overflow-y: auto;
        margin-bottom: 10px;
        padding-right: 5px;
      }

      .inner-incoming, .inner-outgoing {
        margin-bottom: 10px;
      }

      .inner-incoming .inner-content {
        background: #f0f0f0;
        color: #000;
        padding: 10px;
        border-radius: 15px;
        display: inline-block;
        max-width: 70%;
      }

      .inner-outgoing {
        text-align: right;
      }

      .inner-outgoing .inner-content {
        background: #ff69b4;
        color: #fff;
        padding: 10px;
        border-radius: 15px;
        display: inline-block;
        max-width: 70%;
      }

      .inner-name {
        font-weight: bold;
        margin-bottom: 3px;
      }

      .inner-foot {
        border-top: 1px solid #eee;
        padding-top: 10px;
      }

      .inner-form {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .inner-form input {
        flex: 1;
        padding: 8px 12px;
        border-radius: 20px;
        border: 1px solid #ccc;
      }

      .inner-form button {
        background: #ff69b4;
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 50%;
        cursor: pointer;
      }
