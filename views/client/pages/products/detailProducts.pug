                    if reply.parent_id && reply.parent_id.toString() === cmt._id.toString() && reply.role === 'admin'
                      .comment-item.bg-light.p-3.mt-3.ms-5.rounded
                        .d-flex.justify-content-between.align-items-center.mb-1
