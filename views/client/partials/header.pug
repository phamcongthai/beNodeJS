// CSS nội tuyến
style.
  .navbar {
    background-color: #0A0907 !important;
    min-height: 112px;
  }
  .navbar-brand {
    padding-top: 0 !important;
  }
  .nav-item.sub-menu {
    position: relative;
    z-index: 999;
  }
  .nav-item.sub-menu > ul {
    position: absolute;
    top: 100%;
    left: 0;
    list-style: none;
    margin: 0;
    padding: 0;
    background: #fff;
    min-width: 180px;
    display: none;
    border-radius: 6px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }
  .nav-item.sub-menu:hover > ul {
    display: block;
  }
  .nav-item.sub-menu > ul > li,
  .nav-item.sub-menu ul li ul > li {
    border-bottom: 1px solid #eee;
  }
  .nav-item.sub-menu > ul > li a,
  .nav-item.sub-menu ul li ul > li a {
    display: block;
    padding: 10px;
    text-decoration: none;
    color: #333;
    width: 100%;
    transition: background-color 0.2s;
  }
  .nav-item.sub-menu > ul > li a:hover,
  .nav-item.sub-menu ul li ul > li a:hover {
    background-color: #ffe6e6;
  }
  .nav-item.sub-menu ul li ul {
    position: absolute;
    top: 18px;
    left: 100%;
    background-color: #fff;
    min-width: 180px;
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
    border-radius: 6px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }
  .nav-item.sub-menu ul li:hover > ul {
    display: block;
  }
  .search-container {
    max-width: 600px;
    width: 100%;
  }
  .input-group .form-control {
    background-color: #6c757d;
    border: none;
    color: #fff;
  }
  .btn-danger {
    background-color: #e50019;
    border-color: #e50019;
    white-space: nowrap;
  }
  .btn-danger:hover {
    background-color: #cc0016;
    border-color: #cc0016;
  }
  .menu-right-wrapper {
    gap: 20px !important;
  }
  .nav-link {
    padding: 8px 12px;
    transition: background-color 0.3s ease;
    border-radius: 6px;
    white-space: nowrap;
  }
  .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #fff;
  }
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: flex-start;
  }
  .tags-container .tag-pill {
    display: inline-block;
    padding: 4px 10px;
    background-color: rgba(255, 255, 255, 0.1);
    color: #fff;
    border-radius: 50px;
    font-size: 12px !important;
    text-decoration: none;
    transition: background-color 0.3s;
  }
  .tags-container .tag-pill:hover {
    background-color: rgba(255, 255, 255, 0.3);
    color: #fff;
  }
  .account-wrapper {
    position: relative;
  }
  .account-icon i {
    font-size: 1.8rem;
  }
  .account-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color: white;
    border-radius: 6px;
    min-width: 200px;
    z-index: 1000;
    padding: 0.5rem 0;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }
  .account-wrapper:hover .account-menu {
    display: block;
  }
  .account-menu li {
    list-style: none;
  }
  .account-menu a {
    display: block;
    padding: 10px 15px;
    color: #000;
    text-decoration: none;
    white-space: nowrap;
  }
  .account-menu a:hover {
    background-color: #f1f1f1;
  }
