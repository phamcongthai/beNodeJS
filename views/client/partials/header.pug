// CSS nội tuyến (tone đỏ FPT, nền đen cho nút danh mục & người dùng, giỏ hàng nền đen, hover nền đậm hơn)
style.
  .navbar {
     background: #CB1C22 !important;
    min-height: 112px;
  }
  .navbar-brand {
    padding-top: 0 !important;
  }
  .nav-item.sub-menu {
    position: relative;
    z-index: 999;
    margin-right: 15px;
  }
  .nav-item.sub-menu > ul {
    position: absolute;
    top: 100%;
    left: 0;
    list-style: none;
    margin: 0;
    padding: 0;
    background: #fff;
    min-width: 180px;
    display: none;
    border-radius: 6px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }
  .nav-item.sub-menu:hover > ul {
    display: block;
  }
  .nav-item.sub-menu > ul > li,
  .nav-item.sub-menu ul li ul > li {
    border-bottom: 1px solid #eee;
  }
  .shadow {
    box-shadow: none !important;
  }
  .nav-item.sub-menu > ul > li a,
  .nav-item.sub-menu ul li ul > li a {
    display: block;
    padding: 10px;
    text-decoration: none;
    color: #333;
    width: 100%;
    transition: background-color 0.2s;
  }
  .nav-item.sub-menu > ul > li a:hover,
  .nav-item.sub-menu ul li ul > li a:hover {
    background-color: #ffe6e6;
  }
  .nav-item.sub-menu ul li ul {
    position: absolute;
    top: 18px;
    left: 100%;
    background-color: #fff;
    min-width: 180px;
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
    border-radius: 6px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }
  .nav-item.sub-menu ul li:hover > ul {
    display: block;
  }
  .input-group .form-control {
    background-color: #f5b5b5;
    border: none;
    color: #000;
  }
  .btn-danger {
    background-color: #ff0000;
    border-color: #ff0000;
    white-space: nowrap;
    height: 38px;
  }
  .btn-danger:hover {
    background-color: #cc0000;
    border-color: #cc0000;
  }
  .nav-link {
    padding: 8px 12px;
    transition: background-color 0.3s ease;
    border-radius: 6px;
    white-space: nowrap;
  }
  /* Danh mục & Người dùng nền đen mờ mặc định */
  .nav-item.sub-menu > a.nav-link,
  .account-wrapper > a.nav-link {
    background-color: rgba(0, 0, 0, 0.7) !important;
  }
  /* Hover nền đen đậm hơn */
  .nav-item.sub-menu > a.nav-link:hover,
  .account-wrapper > a.nav-link:hover {
    background-color: rgba(0, 0, 0, 0.9) !important;
    color: #fff !important;
  }
  .nav-link.bg-black {
    background-color: black !important;
  }
  .nav-link.bg-black:hover {
    background-color: #111 !important;
  }
  .tags-container .tag-pill {
    padding: 4px 10px;
    background-color: rgba(255, 0, 0, 0.2);
    color: #fff;
    border-radius: 50px;
    font-size: 12px;
    text-decoration: none;
  }
  .tags-container .tag-pill:hover {
    background-color: rgba(255, 0, 0, 0.4);
  }
  .account-wrapper {
    position: relative;
  }
  .account-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color: white;
    border-radius: 6px;
    min-width: 200px;
    z-index: 1000;
    padding: 0.5rem 0;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }
  .account-wrapper:hover .account-menu {
    display: block;
  }
  .account-menu a {
    display: block;
    padding: 10px 15px;
    color: #000;
    text-decoration: none;
  }
  .account-menu a:hover {
    background-color: #ffe6e6;
  }
  .account-menu {
    list-style: none;
    padding-left: 0;
  }
  .account-menu li {
    list-style: none;
  }
  .account-menu a i {
    margin-right: 8px; /* hoặc 10px tùy bạn muốn */
  }