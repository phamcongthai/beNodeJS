include ../mixin/select-tree.pug 

header.navbar.navbar-expand-lg.bg-dark.shadow.py-2
  .container-fluid.d-flex.justify-content-between(style="gap: 20px")
    // Khối 1: Logo - chiếm 1 phần
    .d-flex.flex-column.flex-md-row.align-self-start.gap-3(style="flex: 1; align-self: flex-start; justify-content: center;")
      a.navbar-brand.d-flex.align-items-center.gap-2(href="/")
        img(src=settingsGeneralData.logo, alt="logo", width="40", height="40")
        span.text-light.fw-bold.fs-5 #{settingsGeneralData.websiteName}

    // Khối 2: Tìm kiếm + Danh mục + Tag - chiếm 2 phần
    .d-flex.flex-column(style="flex: 2; align-self: center; gap: 10px;")
      .d-flex.gap-3
        .nav-item.sub-menu
          a.nav-link.text-light.d-flex.align-items-center(href="/products")
            i.fas.fa-bars.me-1
            | Danh mục
          if categories && categories.length > 0
            +menu-tree(categories)

        form.d-flex.flex-grow-1(action="/search", method="GET")
          .input-group.w-100.gap-2
            input.form-control.bg-secondary.text-white.border-0(
              type="text", 
              name="keyword", 
              placeholder="Nhập từ khóa...", 
              value=keyword
            )
            button.btn.btn-danger(type="submit")
              i.fas.fa-search.me-1
              | Tìm
      if tags && tags.length > 0
        .tags-container.d-flex.flex-wrap.gap-2.justify-content-center
          each tag in tags.slice(0, 6)
            a.tag-pill(href=`/search?tag=${encodeURIComponent(tag)}`)= tag

    // Khối 3: Menu bên phải - chiếm 1 phần
    .menu-right-wrapper.d-flex.flex-column.flex-md-row.align-self-start.gap-3(style="flex: 1; align-self: flex-start; justify-content: center;")
      ul.navbar-nav.d-flex.flex-row.gap-3.mb-0
        li.nav-item.position-relative.account-wrapper
          a.nav-link.text-light.account-icon.d-flex.align-items-center(href="#")
            i.fas.fa-user-circle.fs-4
          ul.account-menu.shadow
            if user
              li
                a(href="/user/profile")
                  i.fas.fa-id-badge.me-2
                  | Thông tin tài khoản
              li
                a(href="/checkout/myorder")
                  i.fas.fa-receipt.me-2
                  | Đơn hàng của tôi
              li
                a(href="/user/logout")
                  i.fas.fa-sign-out-alt.me-2
                  | Đăng xuất
            else
              li
                a(href="/user/login")
                  i.fas.fa-sign-in-alt.me-2
                  | Đăng nhập
              li
                a(href="/user/register")
                  i.fas.fa-user-plus.me-2
                  | Đăng ký
        li.nav-item
          a.nav-link.text-light.d-flex.align-items-center(href="/cart")
            i.fas.fa-shopping-cart.me-1
            | Giỏ hàng (#{miniCart ? total : 0})

