.right-banner-box
  - let count = 0
  each ad in ads
    if ad.position === 'homepage_right_banner' && count < 2
      a(href=ad.targetUrl, target="_self")
        .img-wrapper
          img.right-img(src=ad.image, alt=ad.title)
      - count++

style.
  .right-banner-box {
    width: 100%;
    height: 340px; /* fix cứng chiều cao */
    border-radius: 10px;
    box-sizing: border-box;
    overflow: hidden;
    display: flex; 
    flex-direction: column;
    justify-content : space-between;
  }

  .img-wrapper {
    overflow: hidden;
    border-radius: 10px;
  }

  .right-img {
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 10px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .right-img:hover {
    transform: scale(1.02);
  }
