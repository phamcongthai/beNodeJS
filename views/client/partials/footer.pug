footer.footer
  style.
    .footer {
      background: #212121;
      color: #ccc;
      padding: 40px 20px 20px;
      font-size: 14px;
    }
    .footer-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
    }
    .footer-column {
      flex: 1 1 200px;
      margin: 10px;
    }
    .footer-column h4 {
      color: #fff;
      margin-bottom: 12px;
      font-size: 16px;
    }
    .footer-column ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .footer-column ul li {
      margin-bottom: 8px;
    }
    .footer-column ul li a {
      color: #ccc;
      text-decoration: none;
      transition: color 0.3s;
    }
    .footer-column ul li a:hover {
      color: #d70018;
    }
    .footer-bottom {
      text-align: center;
      color: #999;
      padding-top: 20px;
      margin-top: 20px;
      border-top: 1px solid #444;
    }

